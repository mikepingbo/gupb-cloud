    <artifactId>gupbcloud-backend</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0-SNAPSHOT</version>

    <name>gupbcloud-backend</name>
    <url>http://maven.apache.org</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <version-mysql-connector>5.1.46</version-mysql-connector>
        <version-druid>1.1.9</version-druid>
        <version-mybatis>1.3.2</version-mybatis>
        <version-aop>2.0.5.RELEASE</version-aop>
    </properties>

    <modules>
        <module>gupbcloud-admin</module>
        <module>gupbcloud-seller</module>
